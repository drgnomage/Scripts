set $win Mod4
set $alt Mod1


set $font font pango:Ubuntu Mono derivative Powerline Regular 8, FontAwesome 8
$font


floating_modifier $win


bindsym $win+Return exec urxvtcd
bindsym $win+Shift+q kill
bindsym $alt+s exec ~/scripts/rofi
bindsym $win+Left focus left
bindsym $win+Down focus down
bindsym $win+Up focus up
bindsym $win+Right focus right
bindsym $win+Shift+Left move left
bindsym $win+Shift+Down move down
bindsym $win+Shift+Up move up
bindsym $win+Shift+Right move right
bindsym $win+h split h
bindsym $win+v split v
bindsym $win+f fullscreen
bindsym $win+Shift+space floating toggle
bindsym $win+Shift+w exec feh --randomize --bg-fill --no-xinerama ~/Pictures/Backgrounds/white12800.png
bindsym $alt+Control+l exec ~/scripts/lock.sh
bindsym Print exec scrot '%Y-%m-%d-%H%M%S_$wx$h_scrot.png' -e 'mv $f ~/Pictures/Screenshots/'
bindsym $alt+Control+Right workspace next
bindsym $alt+Control+Left workspace prev
bindsym $win+Shift+c reload
bindsym $win+Shift+r restart
bindsym $win+Shift+e exec kill $(ps aux | grep '[i]3' | awk '{print $2}')
bindsym $win+Shift+s sticky toggle


bindsym $win+1 workspace "I"
bindsym $win+2 workspace "II"
bindsym $win+3 workspace "III"
bindsym $win+4 workspace "IV"
bindsym $win+5 workspace "V"
bindsym $win+6 workspace "VI"
bindsym $win+7 workspace "VII"
bindsym $win+8 workspace "VIII"
bindsym $win+9 workspace "IX"
bindsym $win+0 workspace "X"
bindsym $win+Shift+1 move container to workspace "I"
bindsym $win+Shift+2 move container to workspace "II"
bindsym $win+Shift+3 move container to workspace "III"
bindsym $win+Shift+4 move container to workspace "IV"
bindsym $win+Shift+5 move container to workspace "V"
bindsym $win+Shift+6 move container to workspace "VI"
bindsym $win+Shift+7 move container to workspace "VII"
bindsym $win+Shift+8 move container to workspace "VIII"
bindsym $win+Shift+9 move container to workspace "IX"
bindsym $win+Shift+0 move container to workspace "X"


bindsym XF86AudioLowerVolume exec amixer set Master 2%- unmute
bindsym XF86AudioRaiseVolume exec amixer set Master 2%+ unmute
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioPlay exec playerctl play-pause


assign [class="Google-Chrome-Stable"] Chrome
assign [class="Firefox"] Firefox
assign [class="Gimp"] Gimp
assign [class="TeamViewer"] TeamViewer
assign [class="Hexchat"] Hexchat
assign [class="Thunderbird"] Thunderbird
assign [class="Steam"] Steam
assign [class="telegram-desktop"] Telegram


ipc-socket ~/.i3/ipc.sock


set $back	#1e1e1e
set $text	#E5E7EA
set $dark	#2B2E37
set $alert	#1685A6


# class                 border  backgr. text    indicator
client.focused          $alert	$alert	$text	$back
client.focused_inactive $dark	$dark	$text	$back
client.unfocused        $dark	$dark	$text	$back
client.urgent           $alert	$alert	$text	$alert
client.placeholder      $back	$back	$text	$back


gaps inner 6
gaps outer 3
smart_borders on
popup_during_fullscreen smart

for_window [title="[.]*"] floating enable
for_window [class="Firefox"] floating disable
for_window [class="Skype"] floating enable
for_window [class="Transmission"] floating enable
for_window [class="Tor Browser"] floating enable
for_window [class="Steam"] floating enable
for_window [class="Steam" title="^Steam$"] floating disable
for_window [class="^.*"] border pixel 2
for_window [title="x2Go*"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="pop-up"] border pixel 2
for_window [class="TeamViewer*"] floating enable
for_window [class="Computers & Contacts"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [title="Preferences$"] floating enable
for_window [window_role="pop-up|task_dialog"] floating enable
for_window [title="Computers & Contacts"] floating enable
for_window [title="VLC"] floating enable
for_window [title="mpv"] floating enable
for_window [title="Synapse*"] border pixel 2


new_window pixel 0
new_float pixel 1
hide_edge_borders both
popup_during_fullscreen smart
workspace_auto_back_and_forth yes


#exec xfce4-panel
exec gnome-settings-daemon
exec pulseaudio --start
exec killall -q notify-osd
exec_always --no-startup-id dunst -config ~/.config/dunst/dunstrc
exec /usr/bin/pa-applet
exec /usr/bin/nm-applet
exec /usr/bin/pasystray
exec /usr/bin/synergy
exec /usr/bin/teamviewer
exec setterm -blank 0 -powersave off -powerdown 0
exec xset -dpms
exec xset s off
exec setxkbmap gb
exec screen -S bashbullet-session -dm /usr/bin/bashbullet

exec --no-startup-id ~/.screenlayout/default.sh
#exec_always --no-startup-id compton
#exec_always conky -c ~/.conkyrc2 &
#exec_always --no-startup-id feh --bg-scale --randomize ~/Pictures/Backgrounds/white12800.png
exec_always --no-startup-id feh --bg-scale ~/Pictures/Backgrounds/grey12800-pixel-purple.png

bar {
    output            HDMI1
    position          top
    mode              hide
	hidden_state		hide
    workspace_buttons yes
    
    colors {
        background #31363d
        statusline #e6e8eb

        focused_workspace  #ffffff #285577
        active_workspace   #ffffff #333333
        inactive_workspace #888888 #222222
        urgent_workspace   #ffffff #900000
    }
}

bar {
    output            VGA1
    position          top
    mode              hide
	hidden_state		hide
    workspace_buttons yes
    
    colors {
        background #31363d
        statusline #e6e8eb

        focused_workspace  #ffffff #285577
        active_workspace   #ffffff #333333
        inactive_workspace #888888 #222222
        urgent_workspace   #ffffff #900000
    }
}
