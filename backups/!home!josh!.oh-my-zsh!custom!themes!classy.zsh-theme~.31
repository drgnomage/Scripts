# Prompt is the Oh-my-zsh version of user Graawr's 'Classy Touch' themes on http://dotshare.it
local user=`whoami`
local hostname=`hostname`
local current_dir='%{$fg[blue]%}[%{$fg[green]%}%~% %{$fg[blue]%}]%{$reset_color%}'
local git_branch='$(git_prompt_info)%{$reset_color%}'

PROMPT="%(?,%{$fg[green]%}┌─────╼   %{$fg[blue]%}${user}%{$fg[cyan]%}@%{$fg[green]%}${hostname}${dateenc} - %{$fg[blue]%}%D{%d/%M/%Y} ${current_dir}%{$reset_color%} ${git_branch}
%{$fg[green]%}└─╼%{$reset_color%} ,%{$fg[green]%}┌───╼%{$fg[blue]%}${user}%{$fg[cyan]%}@%{$fg[green]%}${hostname}${current_dir}%{$reset_color%} ${git_branch}
%{$fg[green]%}└─╼ %{$reset_color%}%{$fg[red]%}X%{$reset_color%} "

ZSH_THEME_GIT_PROMPT_PREFIX="%{$fg[yellow]%}["
ZSH_THEME_GIT_PROMPT_SUFFIX="] %{$reset_color%}"


