#include ".Xresources"

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi*color-enabled: true

!    color            bg         fg      bg alt    hl bg    hl fg
rofi*color-normal: #90273238, #c1c1c1, #95273238, #33ddff, #273238
rofi*color-active: #90273238, #80cbc4, #95273238, #33ddff, #273238
rofi*color-urgent: #90273238, #ff1844, #95273238, #33ddff, #273238

!    color-window  background   border   separator
rofi*color-window: #90273238, #9033ddff, #90ff33ff

rofi*modi:				run,window,ssh

rofi*lines:				6
rofi*fuzzy:				true
rofi*location:			0
rofi*padding:			15
rofi*scrollbar-width:	3
rofi*font:				Roboto Mono for Powerline Regular 12
rofi*opacity:			95
rofi*bw:				3
rofi*width:				800
rofi*line-margin:		15
