own_window yes
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_argb_visual no
own_window_class Conky
own_window_title Conky
own_window_type override
out_to_console no
use_xft yes
update_interval .5
cpu_avg_samples 2
net_avg_samples 2
double_buffer yes
maximum_width 350
minimum_size 100 900
font xft:Ubuntu Mono:size=11:antialias=true
font2 xft:Ubuntu Mono:size=11:antialias=true
draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
border_width 20
default_color 000000
default_shade_color 000000
default_outline_color 000000
alignment top_left
gap_x 10
gap_y 30
use_spacer left
no_buffers yes
uppercase no
background yes
own_window_argb_value 255

color1 777777
color2 202020
color3 a96700
color4 111111

TEXT
$colour2┬─┬── ${font xft:Ubuntu Mono:style=bold:size=11:antialias=true}System$font
│${offset 7}├── Current User $color3    ${alignr} [$color4 ${exec whoami} $color3] $color1  
│${offset 7}├── Kernel Version $color3  ${alignr} [$color4 ${exec uname -r | awk '{print tolower($0)}'} $color3] $color1  
│${offset 7}├── CPU Model $color3       ${alignr} [$color4 ${exec cat /proc/cpuinfo  | grep -m1 'model name' | cut -c 14-40 }$color3] $color1  
│${offset 7}├── Total Memory $color3    ${alignr} [$color4 $memmax $color3]$color1   
│${offset 7}└── Load $color3            ${alignr} [$color4 ${loadavg 1} ${loadavg 2} ${loadavg 3} $color3]$color1   
│ 
└─┬─ ${font xft:Ubuntu Mono:style=bold:size=11:antialias=true}Other$font
