[global]
    font = Roboto Regular 8
    allow_markup = yes
    plain_text = no
    format = "<b>%s</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 1
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x5-30+20"
    shrink = no
    transparency = 10
    idle_threshold = 60
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    line_height = 0
    separator_height = 2
    padding = 6
    horizontal_padding = 6
    separator_color = frame
    startup_notification = true
    dmenu = /usr/bin/dmenu -p dunst:
    browser = /usr/bin/firefox -new-tab
    icon_position = left
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
    width = 3
    color = "#6E6E6E"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#373737"
    foreground = "#EFEFEF"
    timeout = 10

[urgency_normal]
    background = "#373737"
    foreground = "#EFEFEF"
    timeout = 10

[urgency_critical]
    background = "#373737"
    foreground = "#CE8053"
    timeout = 120
