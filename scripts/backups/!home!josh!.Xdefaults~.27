#include ".Xresources"

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi*color-enabled: true

!    color            bg         fg      bg alt    hl bg    hl fg
rofi*color-normal: #ee273238, #c1c1c1, #dd273238, #33ddff, #273238
rofi*color-active: #ee273238, #80cbc4, #dd273238, #33ddff, #273238
rofi*color-urgent: #ee273238, #ff1844, #dd273238, #33ddff, #273238

!    color-window  background   border   separator
rofi*color-window: #cc273238, #cc33ddff, #ccff33ff

rofi*modi:				run,window,ssh

!rofi*fullscreen:		true
rofi*lines:				10
rofi*fuzzy:				true
rofi*location:			0
rofi*padding:			50
rofi*hide-scrollbar:			true
rofi*font:				Roboto Mono for Powerline Regular 15
!rofi*opacity:			95
rofi*bw:				3
rofi*width:				1400
rofi*line-margin:		15
