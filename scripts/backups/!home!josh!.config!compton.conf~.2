backend = "glx";
#backend = "xrender";
shadow = true;
no-dock-shadow = true;
no-dnd-shadow = true;
clear-shadow = true;
shadow-radius = 4;
shadow-offset-x = -6;
shadow-offset-y = -2;
shadow-exclude = [ "name = 'Notification'", "name = 'Plank'" ];
shadow-ignore-shaped = false;
menu-opacity = 0.8;
inactive-opacity = 1.0;
inactive-opacity-override = true;
blur-background = true;
blur-background-exclude = [ "window_type = 'dock'", "window_type = 'desktop'", "_GTK_FRAME_EXTENTS@:c" ];
fading = true;
fade-in-step = 0.05;
fade-out-step = 0.05;
mark-wmwin-focused = true;
mark-ovredir-focused = true;
detect-rounded-corners = true;
wintypes : 
{
  tooltip : 
  {
    fade = true;
    shadow = false;
    opacity = 0.75;
  };
};
shadow-red = 0.0823529411764706;
shadow-green = 0.0823529411764706;
shadow-blue = 0.0823529411764706;
blur-background-frame = true;
no-fading-openclose = true;
