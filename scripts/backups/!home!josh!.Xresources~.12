*color15: #e0ddd0

URxvt*perl-ext-common:      default,clipboard,url-select,keyboard-select,tabbed
URxvt*url-select.launcher:  chromium
URxvt*url-select.underline: true
URxvt*keysym.M-u:           perl:url-select:select_next
URxvt*keysym.M-Escape:      perl:keyboard-select:activate
URxvt*keysym.M-s:           perl:keyboard-select:search

! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
URxvt*font: xft:Roboto Mono for Powerline:size=10:antialias=true
!URxvt*font: xft:Ubuntu Mono derivative Powerline Nerd Font Plus Font Awesome Plus Octicons Plus Pomicons Mono:size=9:antialias=true
URxvt*boldfont: xft:Roboto Mono for Powerline:bold:size=10:antialias=true
!URxvt*boldfont: xft:Ubuntu Mono derivative Powerline Nerd Font Plus Font Awesome Plus Octicons Plus Pomicons Mono:bold:size=10:antialias=true
! URxvt*fontface: 7x14
URxvt*letterSpace: -3
URxvt*lineSpace: 3
!URxvt*cursorBlink:                    true
URxvt*scrollBar:                      false
URxvt*urgentOnBell:                   false
URxvt*visualBell:                     false
URxvt*internalBorder: 7

rofi*color-enabled: true
rofi*color-window: #273238, #273238, #1e2529
rofi*color-normal: #273238, #c1c1c1, #273238, #394249, #ffffff
rofi*color-active: #273238, #80cbc4, #273238, #394249, #80cbc4
rofi*color-urgent: #273238, #ff1844, #273238, #394249, #ff1844
