[global]
    font = Hack 10
    allow_markup = yes
    format = "%s\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = left
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x5-30+50"
    shrink = no
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 10
    show_indicators = no
    line_height = 5
    separator_height = 0
    padding = 10
    horizontal_padding = 10
    separator_color = #bfbfbf
    startup_notification = true
    dmenu = /usr/bin/dmenu -p dunst
    browser = /usr/bin/firefox
    icon_position = left
    icon_folders = /usr/share/icons/Oranchelo/apps/scalable/:/usr/share/icons/gnome/16x16/status/:/usr/share/icons/Notifications

[frame]
    width = 2
    color = "#cc241d"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    context = ctrl+shift+period
    history = ctrl+shift

[urgency_low]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3

[urgency_critical]
    background = "#282828"
    foreground = "#ebdbb2"
    timeout = 3
