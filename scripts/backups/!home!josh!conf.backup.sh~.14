#!/bin/sh

[ "$(whoami)" != "root" ] && exec sudo -- "$0" "$@"

list="/root/.found.txt"
archive="conf.tar.gz"
D=`date +%d`
M=`date +%m`
Y=`date +%Y`

find / -name "*.conf" ! -name "*.cfg" -fprint $list

tar cpzf ~/$D-$M-$Y-$archivev --files-from=$list --exclude=/run/ --exclude=/home/josh/mnt/ --exclude=/boot/
