######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1

imlib_cache_size 0
double_buffer yes
no_buffers yes

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Hack:size=8
override_utf8_locale yes
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window yes
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_argb_visual yes
#own_window_argb_value 100

alignment tr
gap_x -2
gap_y 180
minimum_size 350 300


default_bar_size 60 8

#########################
# - Graphics settings - #
#########################
draw_shades no

default_color efefef
default_shade_color 1d1d1d
color0 ffffff
color1 ffffff
color2 ffffff


#lua_load ~/.conky/conkybg.lua
#lua_draw_hook_pre conky_draw_bg

TEXT
${voffset 5}
${goto 92}CPU1: ${font Hack:style=Bold:size=8}${color1}${cpu cpu1}%${font}${color} ${alignr 15}Temperature: ${color1}${font Hack:style=Bold:size=8}${color1}${execi 30 sensors | grep 'Core0' | cut -c15-16}°C${color}${font}  

${goto 92}CPU2: ${font Hack:style=Bold:size=8}${color1}${cpu cpu2}%${font}${color} ${alignr 15}Temperature: ${font Hack:style=Bold:size=8}${color1}${execi 30 sensors | grep 'Core1' | cut -c15-16}°C${color}${font}  


${goto 92}RAM:${color1} ${font Hack:style=Bold:size=8}${memperc}%${font}${color}${font Hack:style=Bold:size=8}${font}     Free: ${font Hack:style=Bold:size=8}${color2}${memeasyfree}${color} ${font}${alignr 22}Used: ${font Hack:style=Bold:size=8}${color2}${mem}${color}${font}

${goto 92}HDD:${color1} ${font Hack:style=Bold:size=8}${fs_used_perc /home}%${font}${color}     Free: ${color2}${font Hack:style=Bold:size=8}${fs_free /home}${color}${font} ${alignr 22}Used: ${font Hack:style=Bold:size=8}${color2}${fs_used /home}${color}${font}

