######################
# - Conky settings - #
######################
update_interval 1
total_run_times 0
net_avg_samples 1
cpu_avg_samples 1

imlib_cache_size 0
double_buffer yes
no_buffers yes

#####################
# - Text settings - #
#####################
use_xft yes
xftfont Hack:size=8
override_utf8_locale yes
text_buffer_size 2048

#############################
# - Window specifications - #
#############################
own_window_class Conky
own_window no
own_window_type override
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
#own_window_argb_visual yes
#own_window_argb_value 100

alignment tl
gap_x -4
gap_y -2
minimum_size 350 900


draw_graph_borders no
show_graph_scale no

default_bar_size 60 8

#########################
# - Graphics settings - #
#########################
draw_shades no

default_color efefef
default_shade_color 1d1d1d
color dddddd
color0 ffdd33
color1 ff33ff
color2 33ddff

TEXT
${voffset 3}
${goto 92}CPU1: ${font Hack:style=Bold:size=10}${color1}${cpu cpu1}%${font}${color} ${goto 175}${cpubar cpu1 9,55} ${goto 240}${voffset -1}Temp: ${color1}${font Hack:style=Bold:size=10}${color1}${execi 30 sensors | grep 'Core 0' | awk '{print $3}' | cut -c 2-5}°C${color}${font}  

${goto 92}CPU2: ${font Hack:style=Bold:size=10}${color1}${cpu cpu2}%${font}${color} ${goto 175}${cpubar cpu2 9,55} ${goto 240}${voffset 0}Temp: ${color1}${font Hack:style=Bold:size=10}${execi 30 sensors | grep 'Core 1' | awk '{print $3}' | cut -c 2-5}°C${color}${font}  

${voffset +22}${goto 92}RAM: ${color1} ${font Hack:style=Bold:size=8}${memperc}%${font}${color}${font Hack:style=Bold:size=8}${font}  ${goto 170}${voffset -2}${membar 9,160}${color}${font}
${voffset 0}${goto 92}Root:${color1} ${font Hack:style=Bold:size=8}${fs_used_perc /}%${font}${color}${font Hack:style=Bold:size=8}${font}  ${goto 170}${voffset -2}${fs_bar 9,160 /}${color}${font}
${voffset 0}${goto 92}Home:${color1} ${font Hack:style=Bold:size=8}${fs_used_perc /home}%${font}${color}${font Hack:style=Bold:size=8}${font}  ${goto 170}${voffset -2}${fs_bar 9,160 /home}${color}${font}

${voffset +25}${goto 92}${voffset -6}Download: ${font Hack:style=Bold:size=8}${color1}${downspeed enp2s0}${color}${font}${voffset +2}${color0}${font Hack:size=13}${font}${color}${goto 240}${voffset -10}Local IP: ${alignr 60}

${goto 92}Upload:   ${font Hack:style=Bold:size=8}${color1}${voffset +2}${goto 148}${upspeed enp2s0}${color}${font Hack:style=Bold:size=12}${voffset -18}${goto 210}${color2}${addr enp2s0}${color}


${voffset -3}${goto 40}${font Hack:style=Bold:size=8}CPU
${goto 40}${cpugraph cpu0 30,290 33ddff ff33ff -t}

${voffset +5}${goto 40}${font Hack:style=Bold:size=8}DISK
${goto 40}${diskiograph /dev/sda 30,290 33ddff ff33ff -t}

${voffset +8}${goto 40}${font Hack:style=Bold:size=8}NETWORK
${goto 40}${downspeedgraph enp2s0 30,140 33ddff ff33ff -t}${goto 190}${upspeedgraph enp2s0 30,140 33ddff ff33ff -t}

${image ~/.conky/base.png -p 20,0 -s 339x86}${image ~/.conky/base.png -p 20,150 -s 339x86}${image ~/.conky/base.png -p 20,75 -s 339x86}${image ~/.conky/base.png -p 20,225 -s 339x86}${image ~/.conky/base.png -p 20,300 -s 339x86}${image ~/.conky/base.png -p 20,375 -s 339x86}${image ~/.conky/base.png -p 20,150 -s 339x86}${image ~/.conky/Task_Manager.png -p 40,20 -s 45x45}${image ~/.conky/Memory.png -p 40,95 -s 45x45}${image ~/.conky/wlan100.png -p 40,170 -s 45x45}
