#include ".Xresources"

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi*color-enabled: true

!    color            bg       fg     bg alt   hl bg    hl fg
rofi*color-normal: #273238, #c1c1c1, #273238, #394249, #ffffff
rofi*color-active: #273238, #80cbc4, #273238, #394249, #80cbc4
rofi*color-urgent: #273238, #ff1844, #273238, #394249, #ff1844

!    color-window  background   border   separator
rofi*color-window: #85273238, #8533ddff, #85ff33ff

rofi*modi:				run,window,ssh

rofi*lines:				6
rofi*fuzzy:				true
rofi*location:			0
rofi*padding:			15
rofi*scrollbar-width:	3
rofi*font:				Roboto Mono for Powerline Regular 12
rofi*opacity:			95
rofi*bw:				3
rofi*width:				800
rofi*line-margin:		10
